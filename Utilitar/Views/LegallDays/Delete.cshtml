@model Utilitar.Models.LegallDay

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sterge inregistrare</h2>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Denumire
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Data
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOff)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-primary" asp-action="Index">Inapoi la lista</a>
        <input type="submit" value="Sterge" class="btn btn-danger" />
    </form>
</div>
