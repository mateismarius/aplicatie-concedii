@model Utilitar.Models.LegallDay

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Adauga zi libera</h2>

<div class="row">
    <div class="col-md-4">
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Denumire</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Data</label>
                <input asp-for="DateOff" class="form-control" type="date"/>
                <span asp-validation-for="DateOff" class="text-danger"></span>
            </div>
            <div class="row " id="submit-row">
                <div class="form-group col">
                    <button class="btn btn-info">
                        <a asp-action="Index">Inapoi la lista</a>
                    </button>
                </div>
                <div class="form-group col ">
                    <input type="submit" value="Salveaza" class="btn btn-primary float-end" />
                </div>
            </div>
        </form>
    </div>
</div>

