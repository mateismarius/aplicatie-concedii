        <dt class = "col-sm-2">
            Drepturi ani anteriori
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DrepturiRestante)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-primary" asp-action="Index">Inapoi la lista</a>
        <input type="submit" value="Sterge" class="btn btn-danger" />
    </form>
</div>
