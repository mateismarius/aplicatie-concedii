@model Utilitar.Models.FreeDay

@{
    ViewData["Title"] = "Delete";
}

<h2>Sterge inregistrare</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Numarul cererii:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestNumber)
        </dd>
        <dt class="col-sm-2">
            Data cererii:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestDate)
        </dd>
        <dt class="col-sm-2">
            Data inceperii
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            Data intoarcerii
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FinishDate)
        </dd>
        <dt class="col-sm-2">
            Durata:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
        <dt class="col-sm-2">
            Nume:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>
        <dt class="col-sm-2">
            Tipul de concediu:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DayOffType.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-primary" asp-action="Index">Inapoi la lista</a>
        <input type="submit" value="Sterge" class="btn btn-danger" />
    </form>
</div>
