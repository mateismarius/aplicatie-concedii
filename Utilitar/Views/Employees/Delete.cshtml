@model Utilitar.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h2>Sterge</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Nume:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Prenume:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Functie:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleId)
        </dd>
        <dt class = "col-sm-2">
            Activeaza la:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            Titular la:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PermanentLocation)
        </dd>
        <dt class = "col-sm-2">
            Delegat:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDelegate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2">
            Data inceperii:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataStart)
        </dd>
        <dt class = "col-sm-2">
            Data incetarii:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFinal)
        </dd>
        <dt class = "col-sm-2">
            Drepturi an curent:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DrepturiCurente)
