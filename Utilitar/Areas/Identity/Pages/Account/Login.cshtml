@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div id="login">
    
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-8">
                    <form id="login-form" method="post" class="form">
                        <h3 class="text-center text-black">Autentificare</h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <label>Utilizator</label>
                        <div class="form-floating">
                            
                            <input asp-for="Input.Email" class="form-control" id="username" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <label>Parola</label>
                        <div class="form-floating">
                           
                            <input asp-for="Input.Password" class="form-control" id="password" autocomplete="current-password" aria-required="true" onfocus="this.placeholder=''"/>
                            
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    Tine-ma minte
                                </label>
                            </div>
                        </div>
                        <div>
                            <button id="register-link" type="submit" class="w-100 btn btn-lg btn-primary text-right">Autentificare</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
   
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
