@model Utilitar.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h2>Profil</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nume:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Prenume:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            Funcţie:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Roles.RoleName)
        </dd>
        <dt class = "col-sm-2">
            Activează la:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            Titular la:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PermanentLocation)
        </dd>
        <dt class = "col-sm-2">
            Delegat:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDelegate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marca)
        </dd>
        <dt class = "col-sm-2">
            Data începerii:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataStart)
        </dd>
        <dt class = "col-sm-2">
            Data încetării:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFinal)
        </dd>
    </dl>
</div>
<div>
    <div class="row">
        <div class="col button-back ">
            <button class="btn btn-info ">
                <a asp-action="Index">Inapoi la lista</a>
            </button>
        </div>
        <div class="form-group col ">
            <button class="btn btn-primary " value="Editeaza">
                <a asp-action="Edit" asp-route-id="@Model?.Id">Editeaza</a> 
            </button>
        </div>
    </div>
</div>
